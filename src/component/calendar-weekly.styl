$day-label = 24px
$day-label-radius = 50%
$border-color = $grey-4
$day-past-color = $grey-13
$day-future-color = $grey-9
$day-current-color = $grey-9
$day-past-color = $grey-6
$day-outside-color = $grey-7
$outside-background-color = $grey-3
$background-color = $grey-1
$work-week-width = 48px
$work-week-color = $grey-6

.q-calendar-weekly
  background-color $background-color
  .q-calendar-weekly__head-workweek
    border-right $border-color 1px solid
    border-bottom $border-color 1px solid
    color $day-current-color
    font-weight 800
    align-items center
  .q-calendar-weekly__head-weekday
    border-right $border-color 1px solid
    border-bottom $border-color 1px solid
    color $day-current-color
    font-weight 500
  .q-calendar-weekly__workweek
    border-right $border-color 1px solid
    border-bottom $border-color 1px solid
    align-items center
    justify-content center
    font-weight 800
    &.q-past-day
      color $day-past-color
    &.q-future-day
      color $primary
    &.q-current-day
      color $primary
  .q-calendar-weekly__day
    border-right $border-color 1px solid
    border-bottom $border-color 1px solid
    color $primary
    &.q-outside
      background-color $outside-background-color
    &.q-current-day
      .q-calendar-weekly__day-label
        border 2px solid currentColor
        font-weight 700
      .q-calendar-weekly__day-month
        color currentColor
      .q-calendar-weekly__day-month--day-of-year
        color currentColor
    &.q-past-day
      color $day-past-color
.q-calendar-weekly__day--droppable
    border-right $primary 2px dashed

.q-calendar-weekly
  width 100%
  height 100%
  display flex
  flex-wrap nowrap
  flex-direction column

  &__head
    display flex
    flex-wrap nowrap
    user-select none
    flex 1

  &__head-workweek
    display flex
    flex-wrap nowrap
    flex 1
    width  $work-week-width
    user-select none
    padding 0 4px
    font-size 1rem
    justify-content center

  &__head-weekday
    display flex
    flex-wrap nowrap
    flex 1
    user-select none
    padding 0 0 0 4px
    font-size 1rem
    justify-content center

  &__week
    display flex
    flex-wrap nowrap
    flex 1

  &__workweek
    display flex
    flex-wrap nowrap
    width  $work-week-width
    user-select none
    padding 0 4px
    font-size 2rem
    align-items center

  &__day
    flex 1
    width 0
    overflow hidden
    user-select none
    position relative
    padding 26px 0
    height 80px

  &__day-label
    position absolute
    text-decoration none
    user-select none
    cursor pointer
    box-shadow none
    text-align center
    left 2px
    top 2px
    border-radius $day-label-radius
    width $day-label
    height $day-label
    line-height $day-label

  &__day-month
    position absolute
    text-decoration none
    user-select none
    box-shadow none
    top 5px
    right 12px
    height $day-label
    line-height $day-label

  &__day-month--day-of-year
    position absolute
    text-decoration none
    user-select none
    box-shadow none
    top 5px
    right 12px
    height $day-label
    line-height $day-label
    font-size 0.5rem
